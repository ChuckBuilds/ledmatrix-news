{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "News Ticker Plugin Configuration",
  "description": "Configuration schema for the News Ticker plugin",
  "type": "object",
  "properties": {
    "enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable or disable the news ticker plugin"
    },
    "global": {
      "type": "object",
      "properties": {
        "display_duration": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "Duration in seconds to display the news ticker"
        },
        "update_interval": {
          "type": "integer",
          "default": 300,
          "minimum": 60,
          "maximum": 3600,
          "description": "How often to fetch new headlines (seconds)"
        },
        "update_interval_seconds": {
          "type": "integer",
          "default": 300,
          "minimum": 60,
          "maximum": 3600,
          "description": "How often to fetch new headlines (seconds) - alias for update_interval"
        },
        "scroll_speed": {
          "type": "number",
          "default": 1.0,
          "minimum": 0.1,
          "maximum": 10,
          "description": "[Deprecated] Use display.scroll_speed for frame-based scrolling"
        },
        "scroll_delay": {
          "type": "number",
          "default": 0.01,
          "minimum": 0.001,
          "maximum": 0.1,
          "description": "[Deprecated] Use display.scroll_delay for frame-based scrolling"
        },
        "scroll_pixels_per_second": {
          "type": "number",
          "default": 15.0,
          "minimum": 5.0,
          "maximum": 50.0,
          "description": "[Deprecated] Scroll speed in pixels per second. Use display.scroll_speed and display.scroll_delay for finer control"
        },
        "display": {
          "type": "object",
          "description": "Display and scrolling settings",
          "properties": {
            "scroll_speed": {
              "type": "number",
              "description": "Scrolling speed in pixels per frame",
              "minimum": 0.5,
              "maximum": 5.0,
              "default": 1.0
            },
            "scroll_delay": {
              "type": "number",
              "description": "Delay between scroll steps in seconds",
              "minimum": 0.001,
              "maximum": 0.1,
              "default": 0.01
            }
          },
          "additionalProperties": false
        },
        "target_fps": {
          "type": "integer",
          "default": 100,
          "minimum": 30,
          "maximum": 200,
          "description": "Target frames per second for scrolling"
        },
        "scroll_target_fps": {
          "type": "number",
          "default": 100.0,
          "minimum": 30.0,
          "maximum": 200.0,
          "description": "[Deprecated] Use target_fps instead. Target FPS for scrolling"
        },
        "font_size": {
          "type": "integer",
          "default": 12,
          "minimum": 8,
          "maximum": 20,
          "description": "Font size for headlines"
        },
        "font_path": {
          "type": "string",
          "default": "assets/fonts/PressStart2P-Regular.ttf",
          "description": "Font path for headlines"
        },
        "dynamic_duration": {
          "type": ["boolean", "object"],
          "description": "Dynamic duration settings for synchronising display time with content width",
          "default": {
            "enabled": true,
            "min_duration_seconds": 30,
            "max_duration_seconds": 300,
            "buffer_ratio": 0.1
          },
          "oneOf": [
            {
              "type": "boolean",
              "description": "[Legacy] Enable/disable dynamic duration"
            },
            {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean",
                  "default": true,
                  "description": "Enable dynamic duration based on content width"
                },
                "min_duration_seconds": {
                  "type": "integer",
                  "default": 30,
                  "minimum": 10,
                  "maximum": 300,
                  "description": "Minimum display duration when dynamic duration is enabled"
                },
                "max_duration_seconds": {
                  "type": "integer",
                  "default": 300,
                  "minimum": 30,
                  "maximum": 600,
                  "description": "Maximum display duration when dynamic duration is enabled"
                },
                "buffer_ratio": {
                  "type": "number",
                  "default": 0.1,
                  "minimum": 0.01,
                  "maximum": 1.0,
                  "description": "Extra buffer applied to the calculated duration (percentage expressed as 0-1)"
                }
              },
              "additionalProperties": false
            }
          ]
        },
        "min_duration": {
          "type": "integer",
          "default": 30,
          "minimum": 10,
          "maximum": 300,
          "description": "[Deprecated] Use dynamic_duration.min_duration_seconds instead."
        },
        "max_duration": {
          "type": "integer",
          "default": 300,
          "minimum": 30,
          "maximum": 600,
          "description": "[Deprecated] Use dynamic_duration.max_duration_seconds instead."
        },
        "duration_buffer": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.01,
          "maximum": 1.0,
          "description": "[Deprecated] Use dynamic_duration.buffer_ratio instead."
        },
        "rotation_enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable headline rotation after multiple cycles"
        },
        "rotation_threshold": {
          "type": "integer",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Number of cycles before rotating headlines"
        },
        "headlines_per_feed": {
          "type": "integer",
          "default": 2,
          "minimum": 1,
          "maximum": 10,
          "description": "Number of headlines to fetch per feed"
        },
        "font_size": {
          "type": "integer",
          "default": 12,
          "minimum": 8,
          "maximum": 20,
          "description": "Font size for headlines"
        },
        "background_service": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Enable background data fetching"
            },
            "request_timeout": {
              "type": "integer",
              "default": 30,
              "minimum": 10,
              "maximum": 120,
              "description": "Request timeout in seconds"
            },
            "max_retries": {
              "type": "integer",
              "default": 3,
              "minimum": 1,
              "maximum": 10,
              "description": "Maximum number of retries for failed requests"
            },
            "priority": {
              "type": "integer",
              "default": 2,
              "minimum": 1,
              "maximum": 5,
              "description": "Priority for background requests (1=highest, 5=lowest)"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "feeds": {
      "type": "object",
      "properties": {
        "enabled_feeds": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["MLB", "NFL", "NCAA FB", "NHL", "NBA", "TOP SPORTS", "BIG10", "NCAA", "Other"],
            "description": "Predefined RSS feed categories"
          },
          "uniqueItems": true,
          "minItems": 0,
          "maxItems": 9,
          "default": ["NFL", "NCAA FB"],
          "description": "List of enabled predefined RSS feeds. Maximum 9 feeds (all available predefined feeds)."
        },
        "custom_feeds": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": "string",
              "format": "uri",
              "minLength": 1,
              "maxLength": 2048,
              "description": "Custom RSS feed URL (must be a valid URI)"
            }
          },
          "propertyNames": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^[^\\s](.*[^\\s])?$",
            "description": "Feed name (1-100 characters, cannot start or end with whitespace)"
          },
          "maxProperties": 50,
          "minProperties": 0,
          "additionalProperties": false,
          "description": "Custom RSS feed URLs with user-defined names. Maximum 50 feeds allowed. Feed names must be 1-100 characters and cannot start or end with whitespace."
        },
        "text_color": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          },
          "minItems": 3,
          "maxItems": 3,
          "default": [255, 255, 255],
          "description": "RGB color for headline text"
        },
        "separator_color": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
          },
          "minItems": 3,
          "maxItems": 3,
          "default": [255, 0, 0],
          "description": "RGB color for separators between headlines"
        },
        "show_logos": {
          "type": "boolean",
          "default": true,
          "description": "Display news source logos next to headlines"
        },
        "logo_size": {
          "type": "integer",
          "default": 28,
          "minimum": 8,
          "maximum": 64,
          "description": "Logo size in pixels (height). Defaults to display height minus 4 pixels for margin."
        },
        "feed_logo_map": {
          "type": "object",
          "patternProperties": {
            ".+": {
              "type": "string",
              "minLength": 1,
              "maxLength": 255,
              "description": "Logo filename (e.g., 'my_logo.png') for the feed. Logo files should be placed in assets/news_logos/ directory."
            }
          },
          "propertyNames": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^[^\\s](.*[^\\s])?$",
            "description": "Feed name matching enabled_feeds or custom_feeds"
          },
          "maxProperties": 50,
          "minProperties": 0,
          "additionalProperties": false,
          "description": "Custom logo file mapping for feeds. Maps feed names to logo filenames. Logos should be placed in assets/news_logos/ directory. Example: {\"My Feed\": \"my_custom_logo.png\"}"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": ["enabled"]
}
